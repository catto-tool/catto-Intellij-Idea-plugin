<idea-plugin>
    <name>whaTest</name>
    <id>fi.tampere.whatests</id>
    <description><![CDATA[
    A Plug-in for Automated Code Smell Detection and Refactoring
    ]]>
    </description>

    <change-notes><![CDATA[
      Updated support for newer IntelliJ versions
      <a href="https://github.com/simgam/cASpER">View current version.</a>

    ]]>
    </change-notes>



    <vendor url="https://www.unisa.it/" email="seschool@unisa.it">CloudSea</vendor>
    <extensions defaultExtensionNs="com.intellij">
        <checkinHandlerFactory implementation="fi.tampere.whatTests.plugin.commit.factory.CommitFactory"/>

    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="whatTests.plugin.notification"
                           displayType="BALLOON"/>
        <postStartupActivity
                implementation="fi.tampere.whatTests.plugin.PluginStartupActivity" />
    </extensions>

    <actions>
        <!-- Actions to enable/disabled plugin -->
        <group id="org.intellij.sdk.action.GroupedActions"
               text="WhatTestsPlugin" description="WhatTests plugin option"
               popup="true" >
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action id="enableWhatTestsPlugin" class="fi.tampere.whatTests.plugin.menu.tools.options.EnableWhatTestsPlugin"
                    text="Enable" description="Enable whatTests Plugin">
            </action>
            <action id="disableWhatTestsPlugin" class="fi.tampere.whatTests.plugin.menu.tools.options.DisableWhatTestsPlugin"
                    text="Disable" description="Disable whatTests Plugin">
            </action>
        </group>
    </actions>



    <application-components>

        <!-- Add your application components here -->
    </application-components>

</idea-plugin>